{
  "manifest_version": 3,
  "name": "WikiBias",
  "version": "0.1",
  "description": "Identify biased sources on Wikipedia.",
  "icons": {
    "48": "src/icons/image.svg"
  },
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.wikipedia.org/wiki/*"],
      "js": ["src/content/contentScript.js"]
    }
  ]
}
